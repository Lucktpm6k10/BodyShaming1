<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    app:cardElevation="@dimen/_10sdp"
    app:cardCornerRadius="@dimen/_3sdp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:id="@+id/tvNameSong"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Name song"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameSinger"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="Name singer"
            android:textSize="@dimen/_12sdp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/tvNameSong" />
        <ImageButton
            android:id="@+id/btn_PlayMusic"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintLeft_toRightOf="@id/tvNameSong"
            android:layout_marginLeft="@dimen/_20sdp"
            android:src="@drawable/play"
            android:scaleType="fitCenter"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>