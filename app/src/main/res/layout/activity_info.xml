<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InfoActivity">
    <TextView
        android:id="@+id/tv_nameApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cẩm nang Body shaming"
        android:textSize="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:textColor="#0d0d0d"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_100sdp"/>
    <TextView
        android:textColor="#0d0d0d"
        android:id="@+id/tv_TenTacGia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tác giả : "
        app:layout_constraintTop_toBottomOf="@id/tv_nameApp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textSize="@dimen/_20sdp"/>
    <TextView
        android:textColor="#0d0d0d"
        android:id="@+id/tv_TenTacGia1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lê Hương Trà"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_nameApp"
        app:layout_constraintLeft_toRightOf="@id/tv_TenTacGia"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"/>
    <TextView
        android:textColor="#0d0d0d"
        android:id="@+id/tv_TenTacGia2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyễn Thu Chiến"
        android:gravity="center"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_TenTacGia1"
        app:layout_constraintLeft_toRightOf="@id/tv_TenTacGia"/>
    <TextView
        android:textColor="#0d0d0d"
        android:id="@+id/tv_TenLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ  : "
        app:layout_constraintTop_toBottomOf="@id/tv_TenTacGia2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textSize="@dimen/_20sdp"/>
    <TextView
        android:textColor="#0d0d0d"
        android:id="@+id/tv_TenLop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10A1 - THPT Đồng Lộc"
        android:textSize="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/tv_TenTacGia2"
        app:layout_constraintLeft_toRightOf="@id/tv_TenTacGia"/>


</android.support.constraint.ConstraintLayout>